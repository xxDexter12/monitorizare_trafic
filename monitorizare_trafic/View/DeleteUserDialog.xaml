<Window x:Class="monitorizare_trafic.View.DeleteUserDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Delete User" Height="400" Width="400" Background="#34495E"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

     
        <TextBlock Text="Enter Username to Delete" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="20" FontWeight="Bold" Foreground="White" Margin="0,10,0,0" Grid.Row="0"/>

      
        <TextBlock Text="Username" Foreground="DarkGray" FontSize="12" FontWeight="Medium" FontFamily="Montserrat" Margin="0,15,0,0" Grid.Row="1"/>
        <TextBox x:Name="txtUsername" FontSize="13" FontWeight="Medium" FontFamily="Montserrat" Foreground="Black" CaretBrush="LightGray" BorderBrush="DarkGray" BorderThickness="0,0,0,2" Height="28" VerticalContentAlignment="Center" Margin="0,30,0,0" Padding="20,0,0,0" Grid.Row="1"/>

      
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,50,0,10" Grid.Row="2">
            <Button Content="Delete" Width="100" Height="40" Background="#E74C3C" Foreground="White" Margin="0,0,10,0" Click="btnDelete_Click"/>
            <Button Content="Cancel" Width="100" Height="40" Background="#4CAF50" Foreground="White" Click="btnCancel_Click"/>
        </StackPanel>
    </Grid>
</Window>
